 @import '../varibles.styl'

.banner{
  width 100%
  height 4.5rem  
  background url('../../img/news/banner.jpg') no-repeat
  background-size cover
  p {
    padding-top 1.3rem
    padding-left .93rem
    line-height .5rem
    color $color-white
    text-transform uppercase
    font-size .34rem
  }
}
/*覆盖样式*/
.cube-tab-bar {
  background #f2f2f2
  height .8rem
  .cube-tab {
    height 100%
    padding 0
    div {
      height .8rem
      line-height .8rem
    }
  }
  .cube-tab_active {
    background $color-blue
    color $color-white
  }
}
.cube-slide-item {
  padding: 0 .9rem
  
}

