 @import '../varibles.styl'

.banner{
  width 100%
  height 4.5rem  
  background url('../../img/subCompany/banner.jpg') no-repeat
  background-size cover
  p {
    padding-top 1.3rem
    padding-left .93rem
    line-height .5rem
    color $color-white
    text-transform uppercase
    font-size .34rem
    em {
        font-size .18rem
    }
  }
}
/*覆盖样式*/
.cube-tab-bar {
  background #f2f2f2
  height .8rem
  .cube-tab {
    height 100%
    padding 0
    div {
      height .8rem
      line-height .8rem
    }
  }
  .cube-tab_active {
    background $color-blue
    color $color-white
  }
}
.cube-slide-item {
  padding: 0 .9rem
  h1 {
    font-size .32rem
    color $color-title
    text-align center
    font-weight bold
    margin-top 1.5rem
    margin-bottom .6rem
    img {
        width 3.2rem
        height 1.5rem
    }
  }
  p {
      text-align justify
      font-size .24rem
      color $color-context
      line-height .48rem
      white-space normal
      margin-bottom .68rem
  }
  .website {
      font-size .24rem
      color $color-blue
      font-style italic 
      text-align right
      margin-bottom 1.5rem
  }
}

