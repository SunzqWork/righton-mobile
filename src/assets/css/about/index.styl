 @import '../varibles.styl'

.aboutBanner{
  width 100%
  height 4.5rem  
  background url('../../img/about/banner.jpg') no-repeat
  background-size cover
  p {
    padding-top .6rem
    padding-left .6rem
    line-height .5rem
    color $color-white
    text-transform uppercase
    font-size .34rem
  }
}
/*覆盖样式*/
.cube-tab-bar {
  background #f2f2f2
  height .8rem
  .cube-tab {
    height 100%
    padding 0
    div {
      height .8rem
      line-height .8rem
    }
  }
  .cube-tab_active {
    background $color-blue
    color $color-white
  }
}
.cube-slide-item {
  h1 {
    font-size .32rem
    color $color-title
    text-align center
    font-weight bold
    margin-top 1.5rem
    margin-bottom .6rem
  }
}
/*关于睿昂*/
.about {
  padding: 0 .9rem
  p {
    font-size .24rem
    color $color-context
    line-height .48rem
    white-space normal
    margin-bottom 1.5rem
  }
}
/*睿昂历程*/
.progress {
  width 6.5rem
  margin-left auto
  margin-right auto
  a {
    img {
      width 6.5rem
      height 4.5rem
    }
    p {
      font-size .24rem
      color $color-context
      text-align center
      margin-bottom .5rem
    }
  }
  /*睿昂荣誉*/
  .cube-slide-dots{
    .myDot {
      width .1rem
      height .1rem
      background url('../../img/about/dot.svg') no-repeat center
      img {
        width .1rem
        height .1rem
      }
    }
    .active {
      background url('../../img/about/dotActive.svg') no-repeat center
    }
  }
}
