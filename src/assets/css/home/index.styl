 @import '../varibles.styl'

.home {
    .banner {
        display flex
        width 100%
        height 6rem
        background url('../../img/home/banner01.jpg') no-repeat center
        background-size cover
        color $color-white
        text-align center
        flex-direction column
        justify-content center
        h1 {
            font-size .48rem
            font-weight bold
            margin-bottom .3rem
        }
        p {
            font-size .28rem
        }
    }
    .about{
        margin-top 1.5rem
        margin-bottom 1.5rem
        h1 {
            text-align center 
            font-weight bold
            font-size .32rem
            margin-bottom .6rem
            color $color-title
        }
        p {
            font-size .24rem
            line-height .48rem
            padding-left .86rem
            padding-right .90rem
            color $color-context
            text-align justify
        }
    }
    .diagnosis {
        display flex
        width 100%
        height 4.53rem
        background url('../../img/home/banner02.jpg') no-repeat center
        background-size cover
        color $color-white
        text-align center
        flex-direction column
        justify-content center
        h1 {
            font-size .32rem
            font-weight bold
            margin-bottom .3rem
        }
        p {
            font-size .24rem
            margin-left .85rem
            margin-right .90rem
            line-height .49rem
            text-align justify
        }
    }
    .scientific {
        height 4.51rem
        background url('../../img/home/banner03.jpg') no-repeat center
        background-size cover
        border-top 1px solid #525f64
        border-bottom 1px solid #525f64
    }
    .news {
        background $color-background-gray
        padding 1rem .5rem 0 .5rem
        li {
            padding-top .5rem
            padding-bottom .5rem
            border-bottom 1px solid #cacaca
            display flex
            .time {
                width 1.36rem
                height 1.36rem
                background $color-blue
                color $color-white
                text-align center
                display flex
                flex-direction column
                justify-content center
                margin-right 0.3rem
                strong {
                    font-weight bold
                    font-size .72rem
                }
                span {
                    font-size .18rem
                }
            }
            .title {
                width 4.8rem
                h1 {
                    font-size .24rem
                    color $$color-title
                    font-size .24rem
                    line-height .4rem
                }
                p {
                    font-size .24rem
                    color $color-context
                    margin-top .2rem
                    line-height .42rem
                }
            }
        }
    }
    .notice {
        padding-top 0
        padding-bottom 1rem
        li {
            .time {
                background $color-yellow
            }
            .title {
                h1{
                    color $color-yellow
                    font-weight bold
                }
            }
        }
        li:last-child {
            border-bottom none
        }
    }
}